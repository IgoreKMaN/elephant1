background-size()
	-webkit-background-size arguments
	 -o-background-size arguments
transparent = transparent
body,
html
	padding 0
	margin 0

header
	background url('../img/c2523c06e0077c5.jpg')
	background-position center center
	background-repeat no-repeat
	background-size cover
	height 60vh
	position relative
	.main-header
		border-bottom 2px dotted silver
		position relative
		z-index 110
		background-color rgba(97, 101, 107, 0.5)
		.logo
			width 3%
			float left
			img
				width 100%
		.language
			width 31%
			float left
			padding 1px
			position relative
			ul, li
				margin 0px
				padding 0
				list-style-type none
			#menu-lan
				display block
				margin 0 0 0 5%
				position absolute
				top 20px
				left 20px
			#menu-lan>li
				display block
				height 20px
				position relative
				>ul
					position absolute
					top 20px
					left 10px
					display none
					background-color rgba(0,0,0,0.6)
					-webkit-box-shadow #FFF 
					box-shadow #FFF 
					border-radius 5px
					width 150%
					font-size 14px
					padding 10px 0 10px 10px
			#menu-lan > li:hover > ul
				display block
			a
				color #fff
				text-decoration none
				border-bottom 1px solid silver
			a#ru:before
				content url("../img/RU1.png")
			a#en:before
				content url("../img/EN1.jpg")
			a#de:before
				content url("../img/flags-de1.png")
			a#fr:before
				content url("../img/FR1.png")
			a#it:before
				content url("../img/IT1.png")		
				img
					width 100% 
		.menu
			width 40%
			float left
			margin 2% 0%
			position relative
			a 
				text-decoration none
				color #fff
				padding 0 3%
				.new
					position relative
			a#new-eval:before
				content "NEW"
				color #23af60
				border-top 1px solid #23af60
				border-bottom 1px solid #23af60
				font-size 0.8em
				position absolute
				top -60%
				left 18%
				transform rotate(35deg) 
			a#news:after
				content "\7908"
				padding 5px 
				-webkit-border-radius 20px 
				margin 5px
				border-radius 40px
				background-color #23af60 		 		
		.login
			width 25%
			float left
			margin 2% 0%
			.log
				padding 0 5%
				color #fff
			a
				text-decoration none
			#login-button
				background-color #8642f4
			#whit
				background-color #23af60
			#login-button, #whit
				padding 2% 5%
			a#login:after
				content "\2603"
				padding-left 2%				
	.text-info
		.text-block-1, .text-block-2
			width 50%
			float left
			color #fff
		.text-block-1
			text-align center
			h2
				width 80%
				margin 0 auto
				font-size 2.6em
				font-weight normal
				text-transform uppercase
				padding 3% 0 0 0
			p
				width 50%
				margin 0 auto
				font-size 1.6em
			img
				width 3%
				margin 0 0 3% 0
			span
				display inline-block
				width 50%
				margin 0 auto
				font-size 1.8em
				text-transform uppercase
		.text-block-2
			margin-top 2%
			img
				width 3%
			span
				font-size 2em
	.subscribe
		position absolute
		bottom 5%
		left 10% 
		color #fff 
		p
			font-size 1.1em
		a
			padding 5% 15%
			background-color #8642f4
			font-size 1.5em
			text-decoration none
			color #fff
			text-transform uppercase  		  
.clear
	clear both
.mobile-menu
.mobile_menu_all_display
		display none	 

@media (max-width: 730px)
	
	.menu
	.login a#login-button
	.login a#whit
		display none
	header
		.main-header
			.mobile-menu
				display block
				width 5%
				float left
				.line
					position relative
					img
						width 100%
						cursor pointer
					#img2
						position absolute
						top 0
						opacity 0 
						z-index -1
			.logo
				padding: 0px 0px 0px 2%;
			.language
				#menu-lan
					top 12px
					
			.login
				width 60%
				float right
				margin: 1% 0%;
				
				#login
					position relative
					left 70%
		.text-info 
			.text-block-1
				width 100%
				text-align left
			.text-block-2
				display none
			.text-block-1 h2
			.text-block-1 p
			.text-block-1 span			
				width 80%
			.text-block-1 h2
			.text-block-1 p
			.text-block-1 img	
				margin: 2% 0px 0 5%;
			.text-block-1 h2
				font-size 1.8 em
			.text-block-1 p
				font-size 1.2 em
			.text-block-1 span
				font-size 2.0 em
	.mobile_menu_all_display
		display none
		position relative
		.all_menu
			position absolute
			top 0
			left 0
			width 100%
			height 100vh
			background-color #fff
			z-index 100
			ul
			li
				list-style none
			ul
				padding 0
				margin 0
				
			li
				border-top 1px solid #dedfe0
				border-bottom 1px solid #dedfe0
				text-align center
				padding 2% 0
				a
					color #9b2293
					text-decoration none
					position relative
				
				a#EVALUTION:after
					content "NEW"
					color #2bd831
					border-top 1px solid #2bd831
					border-bottom 1px solid #2bd831
					font-size 0.8em
					margin-left: 100%;
					position absolute
					top 0
					left 100%
					transform rotate(35deg) 
					
					
				a#LOG
					color #fff
					background-color #9b2293
					padding 1% 40%
				a#WHITEPAPER:before
				a#LIGHTPAPER:before
					content url("../img/EN1.jpg")
					margin-right: 10px;
@media (max-width: 360px)
	header
		.main-header
			.mobile-menu
				width 10%
			.logo
				width 6%
				padding-left 6%
			.language
				#menu-lan
					top 12px
					left 40%	
			.login
				float left
	.mobile_menu_all_display
		.all_menu
			ul
				li
					a#EVALUTION:after
						margin-left: 10%;